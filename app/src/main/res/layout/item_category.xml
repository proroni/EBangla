<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="45dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cd_category"
        android:layout_width="96dp"
        android:layout_height="34dp"
        android:padding="5dp"
        card_view:cardElevation="3dp"
        card_view:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txt_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_gravity="center"
            android:text="story books" />


    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="8dp"
        android:layout_height="30dp"
        android:layout_marginEnd="4dp"
        card_view:layout_constraintBottom_toBottomOf="@+id/cd_category"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintHorizontal_bias="0.0"
        card_view:layout_constraintStart_toEndOf="@+id/cd_category"
        card_view:layout_constraintTop_toTopOf="@+id/cd_category"
        card_view:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>